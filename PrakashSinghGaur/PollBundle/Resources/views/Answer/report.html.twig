{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
	<div class="col-lg-12">		
		<ol class="breadcrumb breadcrumb-custom"><b>You are here:</b>
		  <li>Home</li>
		  <li class="active">Opinion Poll Report</li>
		</ol>
		
	</div>
</div>
<div class="row">
	<div class="col-lg-4"><h3><b>Opinion Poll Report <i class="fa fa-comments"></i> </b></h3></div>
	<div class="col-lg-4">
		<div>
		
		</div>
	</div>
	<div class="col-lg-4">
		<ul style="list-style-type:none;" class="pull-right">
			<li style="display:inline" ><a href="/" class="btn btn-default"><i class="fa fa-backward" aria-hidden="true"></i> Back (Home) </a>
			</li>
			<li style="display:inline" ><a href="/pollmanage" class="btn btn-default"> Opinion Polls <i class="fa fa-forward" aria-hidden="true"></i> </a>
			</li>
			
		<ul>
	</div>

</div>
<div class="row">
	<div class="col-lg-2"></div>
	<div class="col-lg-8">
		<h3>{{question.title}}</h3>
		<h4>{{question.description}}</h4>
		<table class="table table-bordered table-stripped table-hovered">
			<thead>
				<tr class="bg-primary">
					<th>#</th>
					<th class="col-sm-4">Username</th>
					<th class="col-sm-2">Yes</th>
					<th class="col-sm-2">No</th>
					<th class="col-sm-2">Not Sure</th>
					<th class="col-sm-2">Submitted On</th>


				</tr>
			</thead>
			<tbody>
				{% for answer in answers %}
					<tr>
						<td>{{loop.index}}</td>
						<td>{{answer.createdBy.username}}</td>
						<td>{{answer.yes}}</td>
						<td>{{answer.no}}</td>
						<td>{{answer.notSure}}</td>
						<td>{{answer.createdOn|date('d-m-Y H:i:s')}}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	<div class="col-lg-2"></div>
</div>

{% endblock %}