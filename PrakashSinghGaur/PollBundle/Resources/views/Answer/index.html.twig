{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
	<div class="col-lg-12">		
		<ol class="breadcrumb breadcrumb-custom"><b>You are here:</b>
		  <li>Home</li>
		  <li class="active">Opinion Polls</li>
		</ol>
		
	</div>
</div>
<div class="row">
	<div class="col-lg-4"><h3><b>Opinion Polls <i class="fa fa-comments"></i> </b></h3></div>
	<div class="col-lg-4">
		<div>
		
		</div>
	</div>
	<div class="col-lg-4">
		<ul style="list-style-type:none;" class="pull-right">
			<li style="display:inline" ><a href="/" class="btn btn-default"><i class="fa fa-backward" aria-hidden="true"></i> Back (Home) </a>
			</li>
			<li style="display:inline" ><a href="/pollmanage/question/add" class="btn btn-default"> Create New <i class="fa fa-forward" aria-hidden="true"></i> </a>
			</li>
			
		<ul>
	</div>

</div>
<div class="row">
	<div class="col-lg-2"></div>
	<div class="col-lg-8">
		<table class="table table-bordered table-stripped table-hovered">
			<thead>
				<tr class="bg-primary">
					<th>#</th>
					<th class="col-sm-6">Question</th>
					<th class="col-sm-2">Answers <i class="fa fa-tasks"></i></th>
					<th class="col-sm-2">Status <i class="fa fa-comment"></i></th>
					<th class="col-sm-2"></th>


				</tr>
			</thead>
			<tbody>
				{% for question in questions %}
					<tr>
						<td>{{loop.index}}</td>
						<td><a href="polls/question/{{question.id}}"> {{question.title}}</a></td>
						<td>{{question.answers | length}}</td>
						<td>{% if question.status %}
								enabled
							{% else %}
								disabled
							{% endif %}
						</td>
						<td>Created By: {{question.createdBy.username}}<br/>
							Created On: {{question.createdOn|date('d-m-Y H:i:s')}}
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</div>
	<div class="col-lg-2"></div>
</div>

{% endblock %}